<UserControl
    x:Class="Authenticator.Code"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Authenticator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Background="#FFF1F1F1" Margin="10" Padding="10">
        <TextBlock Name="CurrentCode" HorizontalAlignment="Stretch" Text="123 456" FontSize="48" />
        <Viewbox VerticalAlignment="Bottom" d:LayoutOverrides="LeftPosition, RightPosition" Stretch="Uniform" MaxHeight="30" HorizontalAlignment="Left">
            <TextBlock Name="Name" HorizontalAlignment="Stretch" TextWrapping="Wrap" Text="Google:hoithebest@gmail.com" />
        </Viewbox>
    </StackPanel>
</UserControl>
